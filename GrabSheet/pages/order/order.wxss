/* pages/management/management.wxss */
 /* Tab横向切换 */
page{
  background-color:#fff;
  height: 100%;
}
.nav{
  width: 100%;
  line-height: 60rpx;
  border-bottom:1px solid #8293A8;
  font-size: 35rpx;
  
}
.nav .title{
  width:100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color:#707070;
  margin-left:10rpx;
}
.nav .des{
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color:#8293A8;
  margin-left:10rpx;
}
.nav .bottom{
  display: flex;
  justify-content: space-between
}
.nav .bottom .delOrder{
  font-size: 30rpx;
  margin-right:10rpx;
  color:#8293A8;
}
.nav .bottom .date{
  font-size: 28rpx;
  margin-left:10rpx;
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  color:#8293A8;
}
.nav .red{
  color:red
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* 取消，删除 */
.btn{
  position: fixed;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  bottom:0rpx;
}
.btn .del{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#fff;
  background:#bfbfbf;
  border-right:1px solid #fff;
}
.btn .delActive{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#fff;
  background:#1ABC9C;
}
.btn .cancel{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#fff;
  background:#bfbfbf;
}
.hasmoreData-text{
  font-size: 30rpx;
  width: 80%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color:#8293A8;
}