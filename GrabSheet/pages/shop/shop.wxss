/* pages/shop/shop.wxss */
page{
  background: #eee;
}
.shoppType{
  display: flex;
  background: #fff;
  border-bottom:1px solid #e2e2e2;
}
.shoppType .section{
  width:50%;
  box-sizing: border-box;
  border-left: 1px solid #e2e2e2;
}
.classOne{
  display: flex;
  align-items: center;
  margin-top:-50rpx;
}
.fff{
  /* width:50rpx; */
}
.down{
  margin-right: 30rpx;
}
/* 商品分类开始 */
.com-selectBox{
    width:100%;
    box-sizing: border-box;
    /* border-left:1px solid #e2e2e2; */
    position: relative;
    background: #fff;
}
.com-sContent{
  width: 100%;
  /* border: 1px solid #e2e2e2; */
  font-size: 30rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}
.com-sContent .text{
  text-align: center;
}
.com-sBtn{
    width: 20%;
    height:60rpx;
    transition: all .3s ease;
    line-height: 60rpx;
    font-size: 40rpx;
    color:rgb(133, 130, 128);
}
.com-sTxt{
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    /* padding-left:10rpx; */
}
.com-sList{
    background: white;
    width: 100%;
    /* position: absolute; */
    border: 1px solid #e2e2e2;
    border-top: none;
    box-sizing: border-box;
    z-index: 3;
    /* top:62rpx; */
    /* max-height: 130rpx; */
    overflow: auto;
}
.com-sItem{
    /* height: 30px; */
    /* line-height: 30px; */
    border-top: 1px solid #e2e2e2;
    /* padding: 0 6px; */
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
}
.com-sItem:first-child{
    border-top: none;
}
/* 商品分类结束 */
.nav{
  display: flex;
  height: 200rpx;
  background: #fff;
  align-items: center;
  margin-top:10rpx;
}
.nav:nth-child(1){
  margin-top:0
}
.nav .left{
  width:200rpx;
  height: 205rpx;
  margin-left:20rpx; 
  display: flex;
  align-items: center;
  /* overflow: hidden; */
}
.nav .left .Pic{
  width:200rpx;
  height: 200rpx;
   display: flex;
 align-items: center;
}
.nav .left image{
  margin: 0 auto;
  width:180rpx;
  height: 160rpx;
}
.nav .right{
  width:60%;
  margin-left:20rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
  margin-right:10rpx;
}
.nav .right .title{
  width: 98%;
  margin: 0 auto;
  font-size: 32rpx;
  /* margin-top: 10rpx; */
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.nav .right .btm{
  width: 98%;
  margin: 0 auto;
  /* margin-top: 20rpx; */
  display: flex;
  justify-content: space-between;
  color:rgb(133, 130, 128);
  font-size: 30rpx;
}
.nav .right .money{
  color:#E96F1E;
  font-weight: bold;
}
.nav .right .btm{
  width: 100%;
  display: flex;
  justify-content: space-between;
  /* margin-right: 20rpx; */
  color:rgb(133, 130, 128);
  font-size: 30rpx;
}
.add{
  font-size: 65rpx;
  color:#06C2F6;
}
.hasmoreData{
  /* margin-bottom: 100rpx; */
}
.hasmoreData-text{
  font-size: 30rpx;
  width: 80%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color:#8293A8;
}
/* 加入购物车 */
.cart{
  position: fixed;
  bottom:0rpx;
  left: 10rpx;
  height: 80rpx;
  display: flex;
  /* width: 100%; */
  background:rgba(6,194,246,0.8); 
  border-radius: 5rpx;
}
.cart .num{
  /* margin-left:15rpx; */
  font-size: 30rpx;
  /* background:#000; */
  /* width: 50rpx; 
  height: 50rpx; */
  border-radius: 50%;
  color:#fff
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
