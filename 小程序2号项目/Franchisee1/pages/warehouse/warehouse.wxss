/* 全部订单 */
.listAll{
  width: 95%;
  margin: 0 auto;
  height: 200rpx;
  /* border:1px solid #eee; */
  display: flex;
  margin-bottom: 20rpx;
  /* justify-content: space-around; */
  /* align-items: center; */
}
/* 订单左侧 */
.leftOrder{
  width: 30%;
  height: 200rpx;
}
.leftOrder image{
  border-radius: 15rpx;
}
/* 订单右侧 */
.rightorder{
  width: 66%;
  display: flex;
  height: 200rpx;
  flex-direction: column;
  margin-left:3%;
  position: relative;
  /* overflow: hidden */
}
.rightorder .title{
  width:100%;
  line-height:50rpx;
  white-space:normal !important;
  display: -webkit-box;
 -webkit-box-orient: vertical;
 -webkit-line-clamp:2;
 overflow: hidden;
 font-size: 30rpx;
}
.rightorder .bottom{
  width: 100%;
}
.sever-operation{
  width: 100%;
  position: absolute;
  bottom:0rpx;
  font-size: 30rpx;
  color:#06C2F6;
  right: 0rpx;
}
.operText{
  width: 100%;
  font-size: 30rpx;
  color:#06C2F6;
  text-align: right;
}
.operText1{
  display: none;
}
.opera{
  display: none;
}
.opera1{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(0, 0, 0, 0.7);
  display:block;
  display: flex;
  justify-content: space-around
}
.edit{
  color:#fff
}
.opera1 .del{
  display: flex;
  align-items: center;
  color:#fff
}

