/* page/myOrder/myOrder.wxss */
 /* Tab横向切换 */
  page{
    background-color:#fff;
  }
.nav{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
}
.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  /* border-right:1px solid gainsboro; */
  color:#000;
  font-size:28rpx;
}
.red{
  line-height:100rpx;
  text-align:center;
  color:#fc5558;
  flex:1;
  /* border-right:1px solid gainsboro; */
  border-bottom:1px solid #fc5558;
  font-size:28rpx;
}
.show{
  display:block;
  text-align:center;
  line-height:200rpx;
}
.hidden{
  display:none;
  text-align:center;
  /* line-height:200px; */
}
/* 全部订单 */
.listAll{
  width: 95%;
  margin: 0 auto;
  height: 200rpx;
  /* border:1px solid #eee; */
  display: flex;
  margin-bottom: 20rpx;
  /* justify-content: space-around; */
  /* align-items: center; */
}
/* 订单左侧 */
.leftOrder{
  width: 30%;
}
.leftOrder image{
  border-radius: 15rpx;
}
/* 订单右侧 */
.rightorder{
  width: 60%;
  display: flex;
  flex-direction: column;
  margin-left:20rpx;
}
.rightorder .title{
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  font-size: 30rpx;
}
.rightorder .bottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.rightorder .bottom .number{
  font-size: 30rpx;
  color:#8293A8;
}
.rightorder .bottom .price{
  color:#DD2727;
}
.rightorder .bottom .dollar{
  font-size: 50rpx;
}
