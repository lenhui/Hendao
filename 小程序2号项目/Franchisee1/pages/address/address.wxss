.weui-cell{
  display: flex;
  align-items: center;
  width: 90%;
  margin: 0 auto;
  border-bottom:1px solid #bfbfbf;
}
.weui-label{
  font-size: 30rpx;
}
.weui-label-area{
  font-size: 30rpx;
}
.weui-input,.weui-select{
  margin-left:50rpx;
  font-size: 30rpx;
}
.weui-select-area{
  font-size: 28rpx;
  margin-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-cells:before{
  top:0;
  border-top:1rpx solid white;
  }
.weui-cell{
  line-height: 3.5rem;
}
.weui-cells:after{
  bottom:0;border-bottom:1rpx solid white
} 
.weui-btn{
  margin-top:50rpx;
  width: 80%;
}
